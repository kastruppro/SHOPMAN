{
  "name": "shopman",
  "version": "0.2.0",
  "author": "kastruppro",
  "description": "Shopping list web app with password protection and bilingual support",
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css --watch",
    "dev": "npm run watch:css"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "baseline-browser-mapping": "^2.9.15",
    "caniuse-lite": "^1.0.30001765"
  }
}
